<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
Base application theme, dependent on API level. This theme is replaced
by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/background_blue</item>
    </style>
    <style name="CustomWindowTitle">
        <item name="android:textColor">@color/background_blue</item>
    </style>
    <style name="CustomButton">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/ui_space</item>
        <item name="android:height">40dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:buttonStyle">@style/CustomButton</item> -->
        <item name="android:windowTitleSize">48dp</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

</resources>